<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup android:gravity="center" android:id="@id/weekdays" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@id/monday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星期一" />
        <RadioButton android:id="@id/tuesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星期二" />
        <RadioButton android:id="@id/wednesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星期三" />
        <RadioButton android:id="@id/thursday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星期四" />
        <RadioButton android:id="@id/friday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="星期五" />
    </RadioGroup>
    <ListView android:layout_gravity="center" android:id="@id/class_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
    <Button android:layout_gravity="center" android:id="@id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="返回" />
</LinearLayout>